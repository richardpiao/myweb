extends base
block head
  link(rel='stylesheet', href='/css/game.css', type='text/css')
block content
  <section class="game">
    include nav
    <div class='ufo'>
      <div class='ufo-body'></div>
      <div class='ufo-rivet-1'></div>
      <div class='ufo-rivet-2'></div>
      <div class='ufo-rivet-3'></div>
      <div class='ufo-rivet-4'></div>
    </div>
    <div class=" top-clock">CLICK ANYWHERE TO START</div>
    <form class="bottom-form" action="/travel" method="post">
      <input type="text" class="input-timer" name="timer">
      <input type="text" class="input-name" name="username"  placeholder="What is your name?" autocomplete="off" maxlength=10 required>
      <button type="submit" class="input-button">ENTER</button>
    </form>
    <canvas class="canvas"></canvas>        
  </section>
  script(src="/js/game.js")

